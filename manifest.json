{
  "manifest_version": 3,
  "name": "AI网页助手",
  "version": "1.0.0",
  "description": "使用AI大模型阅读网页内容并回答用户问题的Chrome扩展",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/sidebar.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
